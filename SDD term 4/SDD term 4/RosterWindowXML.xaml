                    <TextBlock x:Name="Sat2" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat3" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat4" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat5" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat6" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat7" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat8" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat9" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sat10" Text="" Background="Transparent"/>
                </StackPanel>

                <!--Sun-->
                <StackPanel Grid.Column="7" Margin="0" Background="DarkGray">
                    <TextBlock x:Name="SunLabel" Background="White" Text="Sunday"  />
                    <TextBlock x:Name="Sun1" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun2" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun3" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun4" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun5" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun6" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun7" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun8" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun9" Text="" Background="Transparent"/>
                    <TextBlock x:Name="Sun10" Text="" Background="Transparent" />
                </StackPanel>


            </Grid>
            <TextBlock x:Name="DirectoryInfo" Text="{Binding Source={StaticResource Settings}, Path=Default.RosterDirectory}" Margin="10"/>
        </StackPanel>
    </Border>
</Window>
